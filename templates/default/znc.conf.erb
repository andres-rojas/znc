<% version = node[:znc][:version].to_f %>
<% pre_precise = node[:platform] == 'ubuntu' && node[:platform_version].to_f < 12.04 %>
// WARNING
//
// Do NOT edit this file while ZNC is running!
// Use webadmin or *admin instead.
//
// Buf if you feel risky, you might want to read help on /znc saveconfig and /znc rehash.
// Also check http://en.znc.in/wiki/Configuration

<%= 'AnonIPLimit  = 10' unless version < 0.072 || pre_precise %>
<% unless version < 0.094 || pre_precise -%>
MaxBufferSize= <%= node['znc']['max_buffer_size'] %>
SSLCertFile  = <%= node['znc']['data_dir'] %>/znc.pem
<% end -%>
Listen<%= 'er4' unless version < 0.090 || pre_precise %>    = +7777
ConnectDelay = 5
<%= 'ServerThrottle = 30' unless version < 0.080 || pre_precise %>
<%= "Skin         = #{node['znc']['skin']}" unless version < 0.090 || pre_precise %>
StatusPrefix = *
<% node['znc']['modules'].each do |mod, params| -%>
LoadModule   = <%= "#{mod} #{params}".strip  %>
<% end -%>

<% @users.each do |u| %>
<User <%= u['znc']['nick'] || u['id']  %>>
	Pass = <%= u['znc']['pass'] %>
	Nick = <%= u['znc']['nick'] || u['id'] %>
	AltNick = <%= u['znc']['alt_nick'] || "#{u['id']}_" %>
	Ident = <%= u['znc']['ident'] %>
	RealName = <%= u['znc']['real_name'] || u['comment'] %>
	QuitMsg = <%= u['znc']['quit_msg'] || 'ZNC (managed by Opscode Chef)' %>
	ChanModes = <%= u['znc']['chan_modes'] || '+stn' %>
	Buffer = <%= u['znc']['buffer'] || 50 %>
	KeepBuffer = <%= u['znc']['keep_buffer'] || false %>
	MultiClients = true
	BounceDCCs = true
	DenyLoadMod = false
	Admin = true
	<%= 'DenySetBindHost = false' unless version < 0.096 || pre_precise %>
	DCCLookupMethod = default
	TimestampFormat = [%H:%M:%S]
	AppendTimestamp = false
	PrependTimestamp = true
	TimezoneOffset = <%= u['znc']['timezone_offset'] || '0.00' %>
	JoinTries = 10
	MaxJoins = 5
	<%= 'IRCConnectEnabled = true' unless version < 0.090 || pre_precise %>

	Allow = *

  <% Array(u['znc']['modules']).each do |mod, params| -%>
	LoadModule = <%= "#{mod} #{params}".strip  %>
  <% end -%>

	Server = <%= u['znc']['server'] %>
<% Array(u['znc']['channels']).each do |chan, options| -%>

	<Chan <%= chan %>>
	</Chan>
<% end -%>
</User>
<% end -%>
